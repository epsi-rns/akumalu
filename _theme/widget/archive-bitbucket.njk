{% extends "layouts/widget.njk" %}

{% set color = 'yellow' %}

{% block widget_header %}
  <strong>Functional/Data Science</strong>
  <span class="fas fa-fingerprint is-pulled-right"></span>
{% endblock %}

{% block widget_body %}
  {% set archives = archives_bitbucket | values %}
  {% set posts = archives | shuffle | limit(5) %}

  <ul class="widget-list">
    {%- for post in posts -%}
    <li><a href="http://epsi.bitbucket.io{{ post.url }}"
           class="hvr-underline-from-left"
          >{{ post.title }}</a></li>
    {%- endfor -%}
  </ul>
{% endblock %}

